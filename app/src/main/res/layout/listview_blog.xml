<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/listView_blog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/custom_input2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="4dp"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:id="@+id/prof_image"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circle"/>


        <TextView

            android:id="@+id/home_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:foregroundTint="#551313"
            android:layout_weight="7"
            android:maxLines="1"
            android:maxLength="15"
            android:gravity="center"
            android:text="TITLE"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="TITLE"
            android:shadowColor="@color/cardview_dark_background"
            android:textSize="27dp"
            android:textColor="#AE1B1B"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="4dp"
            android:layout_width="63dp"
            android:layout_height="match_parent"

            android:layout_marginLeft="5dp"/>


    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input2">
        <TextView
            android:scrollbars="vertical"
            android:id="@+id/home_thought"
            android:padding="20dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Your thoughts.."
            android:textSize="20dp" />

    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"

        android:background="@drawable/custom_input2"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="italic"
                android:fontFamily="sans-serif"
                android:textColor="#BA791A"
                android:gravity="center_vertical"
                android:hint="Author:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/date"
                android:textStyle="bold"
                android:textColor="#1F6095"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Date:"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>