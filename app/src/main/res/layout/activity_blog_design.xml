<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context="com.example.midtermproject.BlogDesign">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:id="@+id/blogDesignFrame"
            >

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:backgroundTintMode="screen"
            >

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTintMode="screen"
                android:scaleType="fitCenter"
                android:src="@drawable/homenew" />
            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:backgroundTintMode="screen"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/createBlogButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/creates"
                android:scaleType="fitCenter"
                android:backgroundTintMode="screen"/>
            <ImageButton
                android:id="@+id/edidProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/editprofile"
                android:scaleType="fitCenter"
                android:backgroundTintMode="screen"/>
            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/logout"
                android:scaleType="fitCenter"
                android:backgroundTintMode="screen"/>


        </LinearLayout>


    </LinearLayout>
